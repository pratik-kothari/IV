<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/f_login_with_mobile_verification_cv_otp_verification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_10"
        android:elevation="@dimen/dp_5"
        android:padding="@dimen/dp_5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_16">

            <TextView
                android:id="@+id/f_login_with_mobile_verification_tv_otp_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:text="@string/otp_verification"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp_30" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/f_login_with_mobile_verification_til_otp_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/f_login_with_mobile_verification_tv_otp_text"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_16">

                <EditText
                    android:id="@+id/f_login_with_mobile_verification_et_otp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/otp"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/f_login_with_mobile_verification_tv_resend_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/f_login_with_mobile_verification_til_otp_layout"
                android:layout_marginBottom="@dimen/dp_10"
                android:gravity="center_horizontal"
                android:text="@string/resend_otp"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/sp_16" />

            <Button
                android:id="@+id/f_login_with_mobile_verification_b_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/f_login_with_mobile_verification_tv_resend_otp"
                android:background="@color/colorAccent"
                android:text="@string/login"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>