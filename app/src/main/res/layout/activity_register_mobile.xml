<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/f_login_with_mobile_verification_fl_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/f_login_with_mobile_verification_cv_mobile_verification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_10"
                android:elevation="@dimen/dp_5"
                android:padding="@dimen/dp_5">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_16">

                    <TextView
                        android:id="@+id/f_login_with_mobile_verification_tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp_30" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/f_login_with_mobile_verification_til_mobile_number_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/f_login_with_mobile_verification_tv_title"
                        android:layout_marginTop="@dimen/dp_16">

                        <EditText
                            android:id="@+id/f_login_with_mobile_verification_et_mobile_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/mobile"
                            android:inputType="number" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/f_login_with_mobile_verification_tv_contact_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/f_login_with_mobile_verification_til_mobile_number_layout"
                        android:layout_marginBottom="16dp"
                        android:gravity="center"
                        android:text="@string/terms_and_conditions"
                        android:textColor="@color/colorAccent" />

                    <Button
                        android:id="@+id/f_login_with_mobile_verification_b_login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/f_login_with_mobile_verification_tv_contact_text"
                        android:layout_marginBottom="@dimen/dp_16"
                        android:background="@color/colorAccent"
                        android:text="@string/submit"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>